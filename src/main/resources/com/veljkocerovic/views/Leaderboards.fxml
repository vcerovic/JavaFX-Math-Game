<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="594.0" prefWidth="858.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.veljkocerovic.controllers.LeaderboardController">
    <children>
        <VBox layoutX="184.0" layoutY="25.0" prefHeight="505.0" prefWidth="491.0">
            <children>
                <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="78.0" prefWidth="727.0" text="LEADERBOARDS" textAlignment="CENTER">
                    <font>
                        <Font name="Roboto Black" size="37.0" />
                    </font>
                </Label>
                <TableView fx:id="leaderBoardTable" prefHeight="390.0" prefWidth="727.0">
                    <columns>
                        <TableColumn prefWidth="75.0" text="Rank">
                            <cellValueFactory>
                                <PropertyValueFactory property="rank" />
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn prefWidth="138.0" text="Username">
                            <cellValueFactory>
                                <PropertyValueFactory property="username" />
                            </cellValueFactory>
                        </TableColumn>

                        <TableColumn prefWidth="138.0" text="Highscore">
                            <cellValueFactory>
                                <PropertyValueFactory property="highscore" />
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn prefWidth="138.0" text="Times Played">
                            <cellValueFactory>
                                <PropertyValueFactory property="timesPlayed" />
                            </cellValueFactory>
                        </TableColumn>
                    </columns>
                </TableView>
            </children>
        </VBox>
      <Button layoutX="14.0" layoutY="555.0" mnemonicParsing="false" onAction="#switchToHomePage" text="&lt; HOMEPAGE" />
    </children>
</AnchorPane>
